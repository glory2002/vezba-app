<div class = "container">
  <div class = "row well-bg">
    <div class = "col-md-4 col-md-offset-4">
      <h2 class = "title-add">Add new model</h2>
      <br>
      <br>
      <%= form_for ([@region, @region.embroderies.build]) do |f| %>

          <div class="field form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
          </div>

          <div class="field form-group">
            <%= f.file_field :image %>
          </div>
        <br>
        <p>
          <%= f.submit "Add Model", class: 'btn btn-success' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
