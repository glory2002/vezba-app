<!DOCTYPE html>
<html>
<head>
  <title>Vezba</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag "favi.png"%>

</head>
<body>
  <nav class="navbar navbar-default">
      <div class="container-fluid">
        <p class="notice"><%= notice %></p>
        <!-- <p class="alert"><%= alert %></p> -->
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            <%= link_to (image_tag "Logo.png", class: "brand" ) %>
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "HOME", home_index_path %></li>
          <li><%= link_to "ABOUT", home_about_path %></li>
          <li><%= link_to "MODELS", regions_path(:region_id) %></li>
          <% if !user_signed_in? %>
            <li><%= link_to "Log in", new_user_session_path, class: "btn", metod: :get %></li>
            <li><%= link_to "Sign up", new_user_registration_path, class: "btn" %></li>
          <% else %>
            <li><%= link_to "Log out", destroy_user_session_path,class: "btn", method: :delete %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class = "container">

      <%= yield %>

    </div>

<footer class="container-fluid bg-4 text-center">
  <p>Made By <a href="http://gloryangelova.com">Gloria Angelova</a></p>
</footer>

</body>
</html>
