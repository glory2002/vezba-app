<div class="container">
  <div class="row ">
    <div class = " row wrap-div">
      <div class="col-md-5 region-div"><%= image_tag @region.image, class: "img-responsive-region" %></div>
      <div class="col-md-7">
        <div clas = "row">
          <div class="col-md-12 text-box-region">
            <h2 class = "reg-name-show"><%= @region.name %></h2>
            <br>
            <div><%= @region.description %></div>
            <br>
            <br>
            <%= link_to "ADD MODEL", new_region_embrodery_path(@region), class: "button-add btn1" %>
          </div>
        </div>
      </div>
    </div>

    <div class = "row wraped-imgs">
      <div class = "all col-md-12 col-xs-12 col-lg-12">
        <div class = "row">
          <div class = "col-xs-12 wraped-show-img">
            <% @embroderies.each do |embrodery| %>
              <div class = "row ul-list">
                <div class = "col-xs-6 div-show"><%= link_to (image_tag embrodery.image, class: "img-show" ), region_embrodery_path(embrodery.region_id, embrodery) %></div>
                <div class = "col-xs-6">
                 <p class = "e-name"><%= embrodery.name %></p>
                 <%= link_to "Show", region_embrodery_path(embrodery.region_id, embrodery), class: "button-show btn2" %>
                </div>
              </div>
           <% end %>
          </div>
        </div>
      </div>
      <%= paginate @embroderies, :left => 1, :right => 3 %>

    </div>
  </div>
</div>
