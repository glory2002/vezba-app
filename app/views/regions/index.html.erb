<div class = "row">
  <% @regions.each do |region| %>
    <div class = "col-md-4">
      <div class = "box-img-text">
        <%= link_to (image_tag region.image,  class:"region-img"), region %>
        <p class = "region-div"><%= link_to region.name, region,  class:"region-name" %></p>
      </div>
    </div>
  <% end %>
</div>
